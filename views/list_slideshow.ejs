<!DOCTYPE html>
<html>
  <head>

    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/admin.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css"/>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Nice to meet you</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/manager">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">logout</span>
              </a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/manager/new_slideshow">New slideshow</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>file name</th>
          <th>created at</th>
          <th>status</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<slideshow.length; i++) {%>
          <tr>
            <td><%= slideshow[i].id %></td>
            <td><%= slideshow[i].value %></td>
            <td><%= slideshow[i].created_at %></td>
            <td><% if(slideshow[i].is_deleted == 1){ %>
                <span class="label-status label-delete"> deleted</span>
                <% }else { %>
                <span class="label-status label-active"> active</span>
                <% } %>
            </td>
            <td>
              <a href="/manager/delete_slideshow/<%= slideshow[i].id %>">remove</a> |
              <a href="/manager/recover_slideshow/<%= slideshow[i].id %>">recover</a>
          </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    </div>
    <!-- /.container -->
    <hr class="text-white"></hr>
    <!-- Footer -->
    <footer class="footer py-2 rounded">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Personal Cinema 2017</p>
      </div>
    </footer>
  </body>
</html>
