<!DOCTYPE html>
<html>
  <head>

    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/admin.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css"/>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Nice to meet you</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/manager">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">logout</span>
              </a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/manager/new_movie">Add movie</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>visit count</th>
          <th>rating</th>
          <th>category</th>
          <th>created at</th>
          <th>action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<movies.length; i++) {%>
          <tr>
            <td><%= movies[i].movieId %></td>
            <td><%=movies[i].title %></td>
            <td><%= movies[i].visit_count %></td>
            <td><%= movies[i].rating %></td>
            <td><%= movies[i].category_name %></td>
            <td><%= movies[i].created_at %></td>
            <td><a href="/watch/<%= movies[i].movieId %>">preview</a> | <a href="/manager/edit_movie/<%= movies[i].movieId %>">edit</a> | <a>delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    </div>
    <!-- /.container -->
    <hr class="text-white"></hr>
    <!-- Footer -->
    <footer class="footer py-2 rounded">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Personal Cinema 2017</p>
      </div>
    </footer>
  </body>
</html>
