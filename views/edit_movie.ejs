<!DOCTYPE html>
<html>
  <head>

    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/admin.css' />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css"/>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Nice to meet you</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/manager">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <h1 class="text-gray my-4 text-center text-lg-left">Update movie</h1>
      <form action="/manager/save_edit_movie" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="hidden" name="id" value="<%= movie.id %>" class="form-control">
          <input type="text" name="title" value="<%= movie.title %>" class="form-control" id="title">
        </div>

        <div class="form-group">
          <label for="trailer">Trailer video Id:</label>
          <input type="text" name="trailer" value="<%= movie.trailer_url %>" class="form-control" id="trailer">
          <p>https://www.youtube.com/watch?v=<b>bq0nhCGOieM</b></p>
          <p>Note : Trailer video Id is the value after =  (bold text)</p>
        </div>

        <div class="form-group">
          <label for="category">Category:</label>
          <select name="category" class="form-control" id="category">
            <option value="0">--choose category--</option>
            <% for(var i=0; i<movie.listCategory.length; i++) { %>
              <% if(movie.listCategory[i].id == movie.category){ %>
                <option selected value="<%= movie.listCategory[i].id %>"><%= movie.listCategory[i].category_name %></option>
              <% }else{ %>
                <option value="<%= movie.listCategory[i].id %>"><%= movie.listCategory[i].category_name %></option>
              <% } %>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="duration">Duration:</label>
          <input type="text" name="duration" value="<%= movie.duration %>" class="form-control" id="duration">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <input type="text" name="description" value="<%= movie.description %>" class="form-control" id="description">
        </div>
        <div class="form-group">
          <label for="cover">Cover Image:</label>
          <input type="file" name="cover" class="form-control" id="cover">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="footer py-2 rounded">
      <hr class="text-white"></hr>
      <div class="container">
        <p class="m-0 text-center text-gray">Copyright &copy; Personal Cinema 2017</p>
      </div>
    </footer>
  </body>
</html>
